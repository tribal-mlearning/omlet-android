<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/login_RootElement"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blue_background"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:layout_gravity="top|center"
        android:layout_marginTop="20dp"
        android:src="@drawable/tribal_tatrc_logo_header" />

    <EditText
        android:id="@+id/login_access_code_entry"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_background"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="@string/login_access_code_hint_text"
        android:inputType="number"
        android:maxLength="8"
        android:maxLines="1"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/login_access_code_entry_button"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/blue_button"
        android:enabled="false"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:text="@android:string/ok"
        android:textColor="@color/blue_text_colour"
        android:textColorHighlight="#FFFFFF"
        android:textSize="22sp" />

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/divider" />

    <TextView
        style="@style/standard_text_style"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:text="@string/welcome_text" />

    <TextView
        android:id="@+id/login_login_text"
        style="@style/standard_smaller_text_style"
        android:layout_width="280dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="@string/login_text" />

    <View
        android:layout_width="280dp"
        android:layout_height="1dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/divider" />

    <ProgressBar
        android:id="@+id/login_progress_spinner"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/login_build_version_text"
        style="@style/standard_text_style"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal" />

</LinearLayout>